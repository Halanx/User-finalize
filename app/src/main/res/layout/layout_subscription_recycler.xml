<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cb_cart_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="5sp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cvRest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginBottom="2dp"
        android:background="#e9e9e9"
        android:elevation="150dp"
        android:padding="3dp"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cart_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:text="@string/item_name"
                    android:textColor="#303030"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_cart_item_description"
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Description"
                android:textColor="#8c8c8c"
                android:textSize="18sp"
                android:visibility="visible"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/tv_cart_item_decrement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/new_shape"
                        android:padding="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="-"
                        android:textColor="#fafafa"
                        android:textSize="20dp" />

                </RelativeLayout>


                <EditText
                    android:id="@+id/tv_cart_item_quantity"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:gravity="center_horizontal"
                    android:hint="Quantity"
                    android:text="1" />

                <RelativeLayout
                    android:id="@+id/tv_cart_item_increment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/new_shape"
                        android:padding="10dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="+"
                        android:textColor="#fafafa"
                        android:textSize="20dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_cart_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:gravity="end"
                    android:text="Price"
                    android:textColor="#000000"
                    android:textSize="18sp"

                    />


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>