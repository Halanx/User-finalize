<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#ededed"
        android:elevation="100dp"
        app:cardCornerRadius="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#f5f5f5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_product_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:typeface="sans"
                        android:text="ITEM1"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:typeface="sans"
                        android:text="Price"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="231dp"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <RelativeLayout
                            android:id="@+id/restDecrement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/new_shape"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="-"
                                android:typeface="sans"
                                android:textColor="#fafafa"
                                android:textSize="20dp" />

                        </RelativeLayout>


                        <EditText
                            android:id="@+id/restQuantity"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:typeface="sans"
                            android:gravity="center_horizontal"
                            android:hint="Quantity"
                            android:text="1" />

                        <RelativeLayout
                            android:id="@+id/restIncrement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="30dp"
                                android:typeface="sans"
                                android:layout_height="30dp"
                                android:background="@drawable/new_shape"
                                android:padding="10dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:typeface="sans"
                                android:text="+"
                                android:textColor="#fafafa"
                                android:textSize="20dp" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/bt_product_delete"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/fav_filled_48" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <Button
                android:id="@+id/bt_add_cart"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to cart"
                android:textStyle="bold" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>