<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdfdfd"
        app:contentPadding="-2dp"
        app:cardPreventCornerOverlap="true"
        android:visibility="visible"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f9f9f9"
            android:padding="10dp"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group Order"
        android:gravity="center"
        android:textSize="23dp"
        android:layout_marginTop="5dp"
        android:textColor="#313131"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#c1c1c1"
                />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fdfdfd"
                app:contentPadding="-2dp"

                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                android:visibility="visible"
                app:cardCornerRadius="3dp"
                app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/joined"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="0.14"
            android:fontFamily="sans"
            android:text="You are already in a group. Please complete your membership to start/join new group"
            android:textColor="#616161"
            android:textSize="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Cart"
            android:id="@+id/cartjoin"
            android:background="@color/dark_red"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/not_joined"
        android:visibility="visible">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Create group order.Get â‚¹20 H-Cash for each new friends on halanx."
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:fontFamily="sans"
        android:textColor="#616161"
        android:layout_weight="0.14" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Create Group Order"
            android:id="@+id/creategroup"
            android:background="@color/dark_red"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"

            /></LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="--------------------------- OR  ---------------------------"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:id="@+id/or"
                android:fontFamily="sans"
                android:textColor="#919191" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fdfdfd"
                app:contentPadding="-2dp"

                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                android:visibility="visible"
                app:cardCornerRadius="3dp"
                app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/jointhe_group"
                android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Enter your group ID and participate in group order"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:fontFamily="sans"
            android:textColor="#616161"
            android:layout_weight="0.14" />



        <EditText
            android:id="@+id/group_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="Enter Group ID"
            android:layout_marginRight="20dp" />

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="join the group"
        android:id="@+id/join"
            android:background="@color/dark_red"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:text=" SHare the link"
        android:id="@+id/share"
        />
            </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>