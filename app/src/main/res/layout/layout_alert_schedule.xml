            android:paddingTop="10sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="Tuesday"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

