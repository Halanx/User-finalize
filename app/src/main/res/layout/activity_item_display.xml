<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.halanx.userapp.Activities.ItemDisplayActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:src="@drawable/ic_menu_gallery" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/divider"
                    android:typeface="sans"
                    android:layout_toStartOf="@+id/divider"
                    android:paddingRight="5dp"
                    android:text="@string/item_name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />


                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/divider"
                    android:typeface="sans"
                    android:layout_toRightOf="@+id/divider"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="@string/item_price"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/dark_red"
                        android:src="@drawable/minuscopy" />

                    <TextView
                        android:id="@+id/decrement"
                        android:textColor="#fafafa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:typeface="sans"
                        android:layout_centerInParent="true"
                        android:text="-"
                        android:textSize="25dp" />


                </RelativeLayout>


                <EditText
                    android:id="@+id/quantity"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:gravity="center_horizontal"
                    android:hint="Quantity"
                    android:typeface="sans"

                    android:text="1" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/plus"
                        android:tint="@color/dark_red"/>


                    <TextView
                        android:id="@+id/increment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:typeface="sans"
                        android:visibility="invisible"
                        android:textColor="#fafafa"
                        android:layout_centerInParent="true"
                        android:text="+"
                        android:textSize="25dp" />
                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imgFav"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:clickable="true"
                android:src="@drawable/fav_48" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/pb_addtocart"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/bt_add_to_cart"
                    android:padding="15dp"

                    android:textStyle="bold"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/quantity"
                    android:layout_centerHorizontal="true"
                    android:background="@color/dark_red"
                    android:textColor="#fafafa"
                    android:text="@string/payment" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>